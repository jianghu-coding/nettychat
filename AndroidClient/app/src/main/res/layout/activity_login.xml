<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorffffff"
    android:paddingLeft="75pt"
    android:paddingRight="75pt"
    tools:context=".mvvm.view.activity.LoginActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="80pt"
        android:layout_marginTop="250pt"
        android:drawableLeft="@drawable/fhj"
        android:text="QQ"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:id="@+id/ll_account"
        android:layout_marginTop="150pt"
        android:layout_below="@id/logo"
        android:layout_width="match_parent"
        android:layout_height="105pt">

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:textColor="@color/color000000"
            android:layout_marginRight="50pt"
            android:textSize="20sp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_account"
            android:background="@null"
            android:hint="QQ号/手机号/邮箱"
            android:id="@+id/et_name"
            android:textColor="@color/color000000"
            android:textSize="16sp"
            />

        <include
            layout="@layout/hdivlayout"
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:layout_below="@+id/tv_account"
            android:layout_marginTop="20pt"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ll_pass"
        android:layout_marginTop="40pt"
        android:layout_below="@id/ll_account"
        android:layout_width="match_parent"
        android:layout_height="105pt">

        <TextView
            android:id="@+id/tv_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textColor="@color/color000000"
            android:layout_marginRight="50pt"
            android:textSize="20sp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_pass"
            android:background="@null"
            android:hint="请填写密码"
            android:id="@+id/et_pass"
            android:inputType="textPassword"
            android:textColor="@color/color000000"
            android:textSize="16sp"
            />

        <include
            layout="@layout/hdivlayout"
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:layout_below="@+id/tv_pass"
            android:layout_marginTop="20pt"/>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:text="登录"
        android:id="@+id/loginbtn"
        android:onClick="onClick"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/shape_login_btn"
        android:textColor="@color/colorffffff"
        android:layout_height="105pt"
        android:layout_marginTop="50pt"
        android:layout_below="@+id/ll_pass"
        />

    <TextView
        android:layout_width="wrap_content"
        android:text="忘记密码？"
        android:id="@+id/forgetpass"
        android:onClick="onClick"
        android:textSize="16sp"
        android:textColor="@color/color41c5f6"
        android:layout_height="105pt"
        android:layout_marginTop="50pt"
        android:layout_below="@+id/loginbtn"
        />
    <TextView
        android:layout_width="wrap_content"
        android:text="新用户注册"
        android:id="@+id/signuptv"
        android:textSize="16sp"
        android:onClick="onClick"
        android:textColor="@color/color41c5f6"
        android:layout_height="105pt"
        android:layout_marginTop="50pt"
        android:layout_below="@+id/loginbtn"
        android:layout_alignParentRight="true"
        />
    <LinearLayout
        android:layout_marginBottom="110pt"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:text="登录即代表阅读并同意"
        android:textSize="16sp"
        android:textColor="@color/colorc2c2c2"
        android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="服务条款"
            android:textSize="16sp"
            android:textColor="@color/color41c5f6"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
</layout>