<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.chat.androidclient">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/fsf"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".mvvm.view.activity.SplashAvtivity"
            android:theme="@style/splashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".mvvm.view.activity.LoginActivity"
            android:theme="@style/fullscreen"/>
        <activity android:name=".mvvm.view.activity.MainActivity"/>
        <activity android:name=".mvvm.view.activity.BaseActivity">
        </activity>
        <activity android:name=".mvvm.view.activity.SignUpActivity">
        </activity>
    </application>

</manifest>